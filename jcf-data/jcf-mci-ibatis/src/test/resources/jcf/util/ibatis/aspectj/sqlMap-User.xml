<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="user">

	<statement id="insert" parameterClass="map" >
	<![CDATA[
		INSERT INTO
		USER (
			id,
			password
		) VALUES (
			#id#,
			#password#
		)
	]]>
	</statement>

	<statement id="update" parameterClass="map" >
	<![CDATA[
	UPDATE USER
		   SET password  = #password#
         WHERE id = #id#
	]]>
	</statement>


	<statement id="delete" parameterClass="map" >
	<![CDATA[
		DELETE FROM USER
		WHERE id = #id#

	]]>
	</statement>

	<statement id="select" resultClass="java.util.HashMap" parameterClass="int">
	<![CDATA[
		SELECT
			id,
			name,
			password
		FROM
			USER
		WHERE
			id = #value#
	]]>
	</statement>
	<statement id="selectAll" resultClass="java.util.HashMap">
	<![CDATA[
		SELECT
			id,
			name,
			password
		FROM
			USER
	]]>
	</statement>

</sqlMap>